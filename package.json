{
  "name": "react-native-svg-transformer",
  "version": "1.0.0",
  "description": "SVG transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-svg-transformer",
  "scripts": {
    "release": "npmpub",
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "index.js",
    "CHANGELOG.md",
    "README.md"
  ],
  "dependencies": {
    "@svgr/core": "^6.1.2",
    "@svgr/plugin-svgo": "^6.1.2",
    "path-dirname": "^1.0.2"
  },
  "peerDependencies": {
    "react-native": ">=0.59.0",
    "react-native-svg": ">=12.0.0"
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "eslint-config-standard": "^15.0.1",
    "eslint-plugin-import": "^2.17.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npmpub": "^5.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": [
        2,
        "never"
      ],
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "double"
      ],
      "no-else-return": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
