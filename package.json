{
  "name": "react-native-svg-transformer",
  "version": "0.12.0",
  "description": "SVG transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-svg-transformer",
  "scripts": {
    "release": "npmpub",
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "index.js",
    "without-color.js",
    "CHANGELOG.md",
    "README.md"
  ],
  "dependencies": {
    "@svgr/core": "^4.0.3",
    "semver": "^5.5.1"
  },
  "peerDependencies": {
    "react-native": ">=0.45.0",
    "react-native-svg": ">=6.5.1"
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npmpub": "^4.1.0",
    "prettier": "^1.14.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": [
        2,
        "never"
      ],
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "double"
      ],
      "no-else-return": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
